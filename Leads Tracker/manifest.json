{
  "manifest_version": 3,
  "name": "Leads Tracker",
  "version": "1.0",
  "description": "A simple Chrome extension for tracking leads.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [ 
    "activeTab", 
    "scripting", 
    "storage",
    "declarativeNetRequest",
    "tabs"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
